<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:ambientShadowAlpha">0.1</item>
        <item name="android:spotShadowAlpha">0.1</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/black</item>
    </style>

    <style name="DialogTheme" parent="android:Theme.Dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <!-- No backgrounds, titles or window float -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <!--Custom Themes ...-->
    <style name="AppMaterialTheme" parent="AppMaterialTheme.Base" />

    <style name="AppMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/divider</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="checkboxStyle">@style/MyCheckBoxStyle</item>
    </style>


    <style name="AppThemeNoToolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="checkboxStyle">@style/MyCheckBoxStyle</item>
    </style>


    <style name="AppThemeNoToolbar2" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="checkboxStyle">@style/MyCheckBoxStyle</item>
    </style>

    <!--Splash Screen Theme ...-->
    <style name="SplashActivityTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <item name="android:windowTranslucentNavigation" tools:targetApi="kitkat">false</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent
        </item>
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="lollipop">true</item>
    </style>


    <style name="DialogAnimations">
        <item name="android:windowEnterAnimation">@anim/slide_in_down</item>
        <item name="android:windowExitAnimation">@anim/slide_out_up</item>
    </style>

    <style name="MyCheckBoxStyle" parent="Base.Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:theme">@style/MyCheckboxTheme</item>
    </style>

    <style name="MyCheckboxTheme">
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="AppProgressBarStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@android:color/black</item>
    </style>

    <style name="Transparenttheme" parent="AppTheme">
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="otpTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
    </style>

    <style name="DialogAnimationBottom">
        <item name="android:windowEnterAnimation">@anim/slide_in_down</item>
        <item name="android:windowExitAnimation">@anim/slide_out_up</item>
    </style>

    <style name="PauseDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/PauseDialogAnimation</item>
    </style>

    <style name="PauseDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/enter_from_right</item>
        <item name="android:windowExitAnimation">@anim/exit_to_right</item>
    </style>

    <style name="TextLabel" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/text_gray</item>
        <item name="android:textSize">16sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/text_gray</item>
        <item name="colorControlNormal">@color/text_gray</item>
        <item name="colorControlActivated">@color/text_gray</item>
        <item name="boxStrokeColor">@color/input_selector</item>
        <item name="boxStrokeWidth">0.6dp</item>
    </style>

    <style name="TabsCustomStyle" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/opensans_semibold</item>
    </style>

    <style name="TabsStyleRegular" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>

    <style name="openBoldTextStyle">
        <item name="android:fontFamily">@font/opensans_bold</item>
    </style>

    <style name="openSemiBoldTextStyle">
        <item name="android:fontFamily">@font/opensans_semibold</item>
    </style>

    <style name="openRegularTextStyle">
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>

</resources>
