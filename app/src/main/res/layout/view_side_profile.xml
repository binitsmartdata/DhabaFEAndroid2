<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.transport.mall.R" />

        <import type="android.view.View" />

        <variable
            name="userModel"
            type="com.transport.mall.model.UserModel" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/_10sdp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:elevation="@dimen/_20sdp"
                android:padding="@dimen/_1sdp"
                app:cardBackgroundColor="@color/grey_light"
                app:cardCornerRadius="@dimen/_50sdp">

                <com.transport.mall.utils.custom.CircleImageView
                    android:id="@+id/imProfile"
                    loadImage="@{userModel.profileImage}"
                    placeholder="@{R.drawable.ic_profile_pic_placeholder}"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp" />
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvProfileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text="@{userModel.name}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp"
                    tools:text="Profile Name" />

                <ImageView
                    android:id="@+id/ivEdit"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/default_btn_selector"
                    android:padding="10dp"
                    android:src="@drawable/ic_edit" />

            </LinearLayout>
        </LinearLayout>

    </FrameLayout>
</layout>