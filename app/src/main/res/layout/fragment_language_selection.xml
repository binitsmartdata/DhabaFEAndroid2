<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.transport.mall.R" />

        <import type="android.view.View" />

        <variable
            name="vm"
            type="com.transport.mall.ui.authentication.pre_login.languageselection.LanguageSelectionVM" />

        <variable
            name="context"
            type="android.content.Context" />

        <variable
            name="english"
            type="java.lang.Boolean" />

        <variable
            name="hindi"
            type="java.lang.Boolean" />

        <variable
            name="punjabi"
            type="java.lang.Boolean" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="30dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginVertical="20dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_bold"
            android:text="@string/choose_language"
            android:textColor="@color/black"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold" />

        <FrameLayout
            android:id="@+id/flEnglish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/stroke_btn_selector">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:clickable="false"
                android:fontFamily="@font/opensans_regular"
                android:gravity="center"
                android:text="@string/english"
                android:textColor="@{english ? context.getColor(R.color.colorPrimary) :  context.getColor(R.color.grey)}"
                app:isBold="@{english}" />

            <ImageView
                android:id="@+id/ivEnglishTick"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginHorizontal="10dp"
                android:src="@drawable/ic_tick"
                android:visibility="@{english ? View.VISIBLE : View.GONE}" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/flHindi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/stroke_btn_selector">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:clickable="false"
                android:fontFamily="@font/opensans_regular"
                android:gravity="center"
                android:text="@string/hindi"
                android:textColor="@{hindi ? context.getColor(R.color.colorPrimary) :  context.getColor(R.color.grey)}"
                app:isBold="@{hindi}" />

            <ImageView
                android:id="@+id/ivHindiTick"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginHorizontal="10dp"
                android:src="@drawable/ic_tick"
                android:visibility="@{hindi ? View.VISIBLE : View.GONE}" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/flPunjabi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/stroke_btn_selector">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:clickable="false"
                android:fontFamily="@font/opensans_regular"
                android:gravity="center"
                android:text="@string/punjabi"
                android:textColor="@{punjabi ? context.getColor(R.color.colorPrimary) :  context.getColor(R.color.grey)}"
                app:isBold="@{punjabi}" />

            <ImageView
                android:id="@+id/icPunjabiTick"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginHorizontal="10dp"
                android:src="@drawable/ic_tick"
                android:visibility="@{punjabi ? View.VISIBLE : View.GONE}" />

        </FrameLayout>

    </LinearLayout>

</layout>