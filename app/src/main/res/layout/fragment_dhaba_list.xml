<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.transport.mall.R" />

        <import type="android.view.View" />

        <variable
                name="list"
                type="com.transport.mall.utils.common.recyclerviewbase.RecyclerBindingList" />

        <variable
                name="click"
                type="com.transport.mall.utils.common.recyclerviewbase.RecyclerCallback" />

        <variable
                name="toolbarModel"
                type="com.transport.mall.model.Toolbar" />

    </data>

    <LinearLayout
            android:id="@+id/parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/grey_stroke"
                android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/autoTextSearch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:padding="@dimen/_10sdp"
                    android:hint="@string/search_dhaba"
                    android:textSize="@dimen/_12ssp"
                    android:singleLine="true"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/ic_search"
                    android:layout_weight="1" />

            <View
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="match_parent"
                    android:background="@color/grey" />

            <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:entries="@array/cities_list_dummy" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                itemDecor="@{false}"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:layout="@{R.layout.row_dhaba_list}"
                app:onItemClickListener="@{click}"
                app:recyclerLinearAdapter="@{list}" />

    </LinearLayout>

</layout>