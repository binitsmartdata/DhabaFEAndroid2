<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="com.transport.mall.R" />

        <import type="android.view.View" />

        <variable
            name="context"
            type="android.content.Context" />

        <variable
            name="isUpdate"
            type="Boolean" />

        <variable
            name="viewOnly"
            type="Boolean" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/_10sdp"
                android:paddingVertical="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:fontFamily="@font/opensans_semibold"
                        android:text="@string/mechanic_shop"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14ssp" />

                    <RadioGroup
                        android:id="@+id/rgMechYesNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checkedButton="@id/rbMechNo"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rbMechYes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="@dimen/_10sdp"
                            android:tag="true"
                            android:text="@string/yes" />

                        <RadioButton
                            android:id="@+id/rbMechNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="@dimen/_10sdp"
                            android:tag="false"
                            android:text="@string/no" />

                    </RadioGroup>

                    <RadioGroup
                        android:id="@+id/rgMerch27_7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="@{rbMechYes.checked ? View.VISIBLE : View.GONE}">

                        <RadioButton
                            android:id="@+id/rbMerch2771"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="@dimen/_10sdp"
                            android:tag="1"
                            android:text="@string/in_premises" />

                        <RadioButton
                            android:id="@+id/rbMerch2772"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="@dimen/_10sdp"
                            android:tag="2"
                            android:text="@string/_1_200_m" />

                        <RadioButton
                            android:id="@+id/rbMerch2773"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="@dimen/_10sdp"
                            android:tag="3"
                            android:text="@string/_200_400_m" />

                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:fontFamily="@font/opensans_semibold"
                        android:text="@string/mechanic_shop_day"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14ssp" />

                    <RadioGroup
                        android:id="@+id/rgMechDayYesNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checkedButton="@id/rbMechDayNo"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rbMechDayYes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="@dimen/_10sdp"
                            android:tag="true"
                            android:text="@string/yes" />

                        <RadioButton
                            android:id="@+id/rbMechDayNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="@dimen/_10sdp"
                            android:tag="false"
                            android:text="@string/no" />

                    </RadioGroup>

                    <RadioGroup
                        android:id="@+id/rgMechDay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="@{rbMechDayYes.checked ? View.VISIBLE : View.GONE}">

                        <RadioButton
                            android:id="@+id/rbMechDay_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="@dimen/_10sdp"
                            android:tag="1"
                            android:text="@string/in_premises" />

                        <RadioButton
                            android:id="@+id/rbMechDay_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="@dimen/_10sdp"
                            android:tag="2"
                            android:text="@string/_1_200_m" />

                        <RadioButton
                            android:id="@+id/rbMechDay_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="@dimen/_10sdp"
                            android:tag="3"
                            android:text="@string/_200_400_m" />

                    </RadioGroup>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:fontFamily="@font/opensans_semibold"
                        android:text="@string/puncture_shop"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14ssp" />

                    <RadioGroup
                        android:id="@+id/rgPuncture_24_7YesNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checkedButton="@id/rbPuncture_24_7No"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rbPuncture_24_7Yes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="@dimen/_10sdp"
                            android:tag="true"
                            android:text="@string/yes" />

                        <RadioButton
                            android:id="@+id/rbPuncture_24_7No"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="@dimen/_10sdp"
                            android:tag="false"
                            android:text="@string/no" />

                    </RadioGroup>

                    <RadioGroup
                        android:id="@+id/rgPuncture_24_7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="@{rbPuncture247Yes.checked ? View.VISIBLE : View.GONE}">

                        <RadioButton
                            android:id="@+id/rbPuncture24_7_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="@dimen/_10sdp"
                            android:tag="1"
                            android:text="@string/in_premises" />

                        <RadioButton
                            android:id="@+id/rbPuncture24_7_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="@dimen/_10sdp"
                            android:tag="2"
                            android:text="@string/_1_200_m" />

                        <RadioButton
                            android:id="@+id/rbPuncture24_7_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="@dimen/_10sdp"
                            android:tag="3"
                            android:text="@string/_200_400_m" />

                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:fontFamily="@font/opensans_semibold"
                        android:text="@string/puncture_shop_day"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14ssp" />

                    <RadioGroup
                        android:id="@+id/rgPunctureDayYesNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checkedButton="@id/rPunctureDayNo"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rbPunctureDayYes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="@dimen/_10sdp"
                            android:tag="true"
                            android:text="@string/yes" />

                        <RadioButton
                            android:id="@+id/rPunctureDayNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="@dimen/_10sdp"
                            android:tag="false"
                            android:text="@string/no" />

                    </RadioGroup>

                    <RadioGroup
                        android:id="@+id/rgPunctureDay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="@{rbPunctureDayYes.checked ? View.VISIBLE : View.GONE}">

                        <RadioButton
                            android:id="@+id/rbPunctureDay1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="@dimen/_10sdp"
                            android:tag="1"
                            android:text="@string/in_premises" />

                        <RadioButton
                            android:id="@+id/rbPunctureDay2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="@dimen/_10sdp"
                            android:tag="2"
                            android:text="@string/_1_200_m" />

                        <RadioButton
                            android:id="@+id/rbPunctureDay3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="@dimen/_10sdp"
                            android:tag="3"
                            android:text="@string/_200_400_m" />

                    </RadioGroup>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:fontFamily="@font/opensans_semibold"
                        android:text="@string/daily_utility_shop"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14ssp" />

                    <RadioGroup
                        android:id="@+id/rgUtilityYesNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checkedButton="@id/rbUtilityNo"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rbUtilityYes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="@dimen/_10sdp"
                            android:tag="true"
                            android:text="@string/yes" />

                        <RadioButton
                            android:id="@+id/rbUtilityNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="@dimen/_10sdp"
                            android:tag="false"
                            android:text="@string/no" />

                    </RadioGroup>

                    <RadioGroup
                        android:id="@+id/rgUtility24_7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="@{rbUtilityYes.checked ? View.VISIBLE : View.GONE}">

                        <RadioButton
                            android:id="@+id/rbUtility24_7_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="@dimen/_10sdp"
                            android:tag="1"
                            android:text="@string/in_premises" />

                        <RadioButton
                            android:id="@+id/rbUtility24_7_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="@dimen/_10sdp"
                            android:tag="2"
                            android:text="@string/_1_200_m" />

                        <RadioButton
                            android:id="@+id/rbUtility24_7_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="@dimen/_10sdp"
                            android:tag="3"
                            android:text="@string/_200_400_m" />

                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:fontFamily="@font/opensans_semibold"
                        android:text="@string/daily_utility_shop_day"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14ssp" />

                    <RadioGroup
                        android:id="@+id/rgUtilityDayYesNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checkedButton="@id/rbUtilityDayNo"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rbUtilityDayYes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="@dimen/_10sdp"
                            android:tag="true"
                            android:text="@string/yes" />

                        <RadioButton
                            android:id="@+id/rbUtilityDayNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="@dimen/_10sdp"
                            android:tag="false"
                            android:text="@string/no" />

                    </RadioGroup>

                    <RadioGroup
                        android:id="@+id/rgUtilityDay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="@{rbUtilityDayYes.checked ? View.VISIBLE : View.GONE}">

                        <RadioButton
                            android:id="@+id/rbUtilityDay_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="@dimen/_10sdp"
                            android:tag="1"
                            android:text="@string/in_premises" />

                        <RadioButton
                            android:id="@+id/rbUtilityDay_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="@dimen/_10sdp"
                            android:tag="2"
                            android:text="@string/_1_200_m" />

                        <RadioButton
                            android:id="@+id/rbUtilityDay_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="@dimen/_10sdp"
                            android:tag="3"
                            android:text="@string/_200_400_m" />

                    </RadioGroup>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:fontFamily="@font/opensans_semibold"
                        android:text="@string/barber"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14ssp" />

                    <RadioGroup
                        android:id="@+id/rgBarber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rbBarber1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="@dimen/_10sdp"
                            android:tag="1"
                            android:text="@string/in_premises" />

                        <RadioButton
                            android:id="@+id/rbBarber2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="@dimen/_10sdp"
                            android:tag="2"
                            android:text="@string/_1_200_m" />

                        <RadioButton
                            android:id="@+id/rbBarber3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="@dimen/_10sdp"
                            android:tag="3"
                            android:text="@string/_200_400_m" />

                    </RadioGroup>
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/flBarberImg"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    android:background="@color/grey_light">

                    <LinearLayout
                        android:id="@+id/llLicensePhoto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:src="@drawable/ic_add_round" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:fontFamily="@font/opensans_regular"
                            android:text="@string/upload_barber_photo"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14ssp" />

                    </LinearLayout>

                </FrameLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp" />

                <Button
                    android:id="@+id/btnSaveDhaba"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@drawable/primary_color_btn_selector"
                    android:text="@{isUpdate ? context.getString(R.string.update) : context.getString(R.string.save)}"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:visibility="@{viewOnly ? View.GONE : View.VISIBLE}" />

                <Button
                    android:id="@+id/btnSkip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:background="@drawable/default_btn_selector"
                    android:text="@string/skip"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:visibility="@{viewOnly||isUpdate ? View.GONE : View.VISIBLE}" />

            </LinearLayout>

            <View
                android:id="@+id/viewRestrictor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:visibility="@{viewOnly ? View.VISIBLE : View.GONE}" />

        </FrameLayout>
    </androidx.core.widget.NestedScrollView>
</layout>