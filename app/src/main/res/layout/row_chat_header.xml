<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/unread"
                style="@style/openBoldTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="#4DD4CCCC"
                android:elevation="4dp"
                android:gravity="center"
                android:padding="10dp"
                android:text=""
                android:textColor="@color/grey_light"
                android:visibility="gone" />

            <!--  <androidx.appcompat.widget.AppCompatTextView
                  android:id="@+id/tv_agent"
                  style="@style/montserratTextStyle"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="6dp"
                  android:layout_marginTop="6dp"
                  android:layout_marginRight="6dp"
                  android:layout_marginBottom="2dp"
                  android:background="#4DDDE9EF"
                  android:elevation="0dp"
                  android:gravity="center"
                  android:hint="sss"
                  android:paddingLeft="4dp"
                  android:paddingTop="4dp"
                  android:paddingRight="4dp"
                  android:paddingBottom="4dp"
                  android:singleLine="false"
                  android:textColor="@color/black"
                  android:textColorHint="@color/sub_text_gray"
                  android:textSize="13sp"
                  android:visibility="gone"/>-->

            <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/agentBanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">


                <androidx.cardview.widget.CardView
                    android:id="@+id/card_parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginEnd="@dimen/_50sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:visibility="visible"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/_3sdp"
                    app:cardElevation="@dimen/_1sdp">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/receoverId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/senderLayoout"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/receiver"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:layout_marginEnd="@dimen/_3sdp"
                            android:orientation="vertical"
                            android:paddingStart="@dimen/_3sdp"
                            android:paddingTop="@dimen/_3sdp"
                            android:paddingEnd="@dimen/_3sdp"
                            android:paddingBottom="@dimen/_3sdp">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/receiverMsg"
                                style="@style/openRegularTextStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:autoLink="all"
                                android:background="@android:color/transparent"
                                android:hint=""
                                android:paddingStart="@dimen/_3sdp"
                                android:paddingTop="@dimen/_3sdp"
                                android:paddingEnd="@dimen/_1sdp"
                                android:paddingBottom="@dimen/_1sdp"
                                android:singleLine="false"
                                android:text="Please complete the form below and someone from our team will get in touch with you very soon. Thanks!"
                                android:textColor="#000000"
                                android:textColorHint="@color/text_gray"
                                android:textSize="@dimen/_12ssp" />


                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="end"
                                android:orientation="horizontal">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textSize="8sp" />
                            </androidx.appcompat.widget.LinearLayoutCompat>
                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.cardview.widget.CardView>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>